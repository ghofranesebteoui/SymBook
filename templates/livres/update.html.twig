{% extends 'admin/base.html.twig' %}

{% block title %}SymBook - Modifier un livre{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Modifier un livre</h1>
        <a href="{{ path('app_livres_all') }}" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Formulaire de modification</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.editeur, 'Editeur', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.editeur, {'attr': {'class': 'form-control'}})  }}
                        {{ form_errors(form.editeur) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text">DT</span>
                        </div>
                        {{ form_errors(form.prix) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.categorie) }}
                    </div>
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.resume, 'Résumé', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.resume, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.resume) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.image, 'URL de l\'image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                <small class="form-text text-muted">Entrez l'URL complète de l'image du livre.</small>
                {{ form_errors(form.image) }}
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
