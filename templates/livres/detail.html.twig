{% extends 'admin/base.html.twig' %}

{% block title %}SymBook - Détails du livre{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Détails du livre</h1>
        <div>
            <a href="{{ path('app_livres_update', {'id': livre.id}) }}" class="btn btn-warning shadow-sm me-2">
                <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
            </a>
            <a href="{{ path('app_livres_all') }}" class="btn btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Image</h6>
                </div>
                <div class="card-body text-center">
                    <img src="{{ livre.image|default('https://m.media-amazon.com/images/I/51aWTLR3E0L._SX331_BO1,204,203,200_.jpg') }}"
                         class="img-fluid rounded"
                         alt="{{ livre.titre }}"
                         style="max-height: 400px;">
                    <div class="mt-3">
                        <a href="{{ livre.image|default('#') }}" class="btn btn-sm btn-primary" target="_blank">
                            <i class="fas fa-external-link-alt me-1"></i> Voir l'image en taille réelle
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informations</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <th style="width: 30%">ID</th>
                                <td>{{ livre.id }}</td>
                            </tr>
                            <tr>
                                <th>Titre</th>
                                <td>{{ livre.titre|default('Titre indisponible') }}</td>
                            </tr>
                            <tr>
                                <th>Editeur</th>
                                <td>{{ livre.editeur|default('Editeur inconnu') }}</td>
                            </tr>
                            <tr>
                                <th>Prix</th>
                                <td>{{ livre.prix|default('0.00')|number_format(2, ',', ' ') }} DT</td>
                            </tr>
                            <tr>
                                <th>Catégorie</th>
                                <td>{{ livre.categorie.libelle|default('Sans catégorie') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <h5 class="mt-4 mb-3 font-weight-bold">Résumé</h5>
                    <p>{{ livre.resume|default('Aucun résumé disponible.') }}</p>

                    <div class="mt-4">
                        <a href="{{ path('app_livres_update', {'id': livre.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i> Modifier
                        </a>
                        <a href="{{ path('app_livres_delete', {'id': livre.id}) }}" class="btn btn-danger ms-2"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?');">
                            <i class="fas fa-trash me-1"></i> Supprimer
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Statistiques de vente</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Ventes totales</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ livre.sales|default(0) }}</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Revenus générés</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                {{ (livre.sales|default(0) * livre.prix|default(0))|number_format(2, ',', ' ') }} DT
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Avis clients</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ livre.avis|default([])|length }}</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
