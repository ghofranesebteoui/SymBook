<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Symbook - Votre Librairie en Ligne{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">Symbook</a>
        <div class="navbar-nav me-auto">
            <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
            <a class="nav-link" href="{{ path('app_livres') }}">Catalogue</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link" href="{{ path('app_cart') }}">Mon Panier</a>
                <a class="nav-link" href="{{ path('app_orders') }}">Mes Commandes</a>
            {% endif %}
        </div>
        <div class="navbar-nav">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
            {% else %}
                <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </div>
    </div>
</nav>

<div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% block body %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>